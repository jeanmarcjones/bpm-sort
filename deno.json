{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "run": "deno run --allow-env --allow-read --allow-run --allow-write main.ts",
    "test": "deno test --allow-env --allow-read --allow-run --allow-write",
    "install": "sh scripts/install.sh"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.11",
    "@std/fs": "jsr:@std/fs@^1.0.10",
    "@std/path": "jsr:@std/path@^1.0.8"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["explicit-function-return-type"]
    }
  }
}
